<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp">

            <ImageView
                android:id="@+id/photo"
                android:layout_width="@dimen/widget_cardview_activity_menu_photo_width"
                android:layout_height="@dimen/widget_cardview_activity_menu_photo_height"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@id/photo"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textSize="@dimen/widget_cardview_activity_table_textsize_code" />

            <TextView
                android:id="@+id/code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@id/photo"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textSize="24sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>